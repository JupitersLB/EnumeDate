      key_id: ENV["KEY_ID"],
      issuer_id: ENV["ISSUER_ID"],
      key_filepath: 'distribution.p8'
    )
    # get_certificates(
    #   api_key: api_key
    # )           # invokes cert
    # get_provisioning_profile(
    #   api_key: api_key
    # )   # invokes sigh
    build_app(workspace: "EnumeDate.xcworkspace", export_method: "app-store", scheme: "EnumeDate", xcargs: "-allowProvisioningUpdates")
    upload_to_testflight(
      api_key: api_key
    )
    delete_keychain
  end

